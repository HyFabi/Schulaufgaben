
public class Quicksort {
	int[] a = new int[10];
	
	public static void main(String[] args) {
		// TODO Auto-generated method stub

	}
	
	public int pivot(int i, int j, int pivot) {
		if(i < j) {
			if(a[i] < a[pivot]) {
				return pivot(i+1, j, pivot);
			}else if(a[j] > a[pivot]) {
				return pivot(i, j-1, pivot);
			}else {
				int x = a[i];
				a[i] = a[j];
				a[j] = x;
			}
		}else {
			if(a[pivot] < a[j]) {
				int x = a[pivot];
				a[pivot] = a[j];
				a[j] = x;
			}else {
				return pivot;
			}
		}
		return 0;
	}
}