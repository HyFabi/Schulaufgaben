package at.maurutschek.myutil;

import java.io.File;

public class Rekursionen {
	public void listFiles(File dir, String tabs) {
		if(!dir.exists())
			return;
			System.out.println(tabs + dir.getName());
		if(dir.isDirectory()) {
			tabs += "\t";
			for(File f : dir.listFiles()) {
				listFiles(f, tabs);
			}
		}
	}
	
	public long getGroesse(File dir) {
		return getGroesse(dir, 0);
	}
	
	public long getGroesse(File dir, long groesse) {
		if(dir.isFile()) {
			System.out.println(dir.getName());
			return dir.length();
		}
		if(dir.isDirectory()) {
			for(File f : dir.listFiles()) {
				groesse += getGroesse(f, groesse);
			}
			return groesse;
		}
		return 0;
	}
	
	public void binSuche(int[] a, int s) {
		try {
			binSuche(0, a.length-1,a,s);
		}catch (Exception e) {
			// TODO: handle exception
		}
	}
	
	public boolean binSuche(int l, int r, int[] ar, int s) {
		System.out.println(l + " " + ar[l] + " " + r + ar[r]);	
		int m = r/2 +l;
		if(s > ar[m])
			return binSuche(l, m, ar, s);
		if(s < ar[m])
			return binSuche(m, r, ar, s);
		
		if(r == 1 || l == 1 && ar[r] == s)
			System.out.println(a);
			return true;
		else
			return false;
	}
}
