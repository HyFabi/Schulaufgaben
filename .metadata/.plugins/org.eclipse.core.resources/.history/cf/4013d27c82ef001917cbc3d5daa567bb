package myutil;

public class Rekursionen {

	
	int[] array = { (int) (Math.random() * 10), (int) (Math.random() * 10), (int) (Math.random() * 10),
			(int) (Math.random() * 10), (int) (Math.random() * 10), (int) (Math.random() * 10),
			(int) (Math.random() * 10), (int) (Math.random() * 10), (int) (Math.random() * 10),
			(int) (Math.random() * 10) };
public int fakultaetStart(int n)
{
	int d=1;
	return fakultaetAusfuhr(n,d);
}
	public int fakultaetAusfuhr(int n,int d) {

		if (n > 16) {
			System.out.println("Wert zu hoch für INT");
			return 0;
		}
		d = d * n;
		n--;
		if (n > 1)
			fakultaetAusfuhr(n,d);
		else
			System.out.println(d);
		return d;

	}

	public int ggtStart(int zahl1, int zahl2, boolean rekursiv)
	{
		int d=0;
		if(zahl1<zahl2)
			d=zahl2;
		else
			d=zahl1;
		return ggt(zahl1, zahl2,  rekursiv,d);
		
	}
	public int ggt(int zahl1, int zahl2, boolean rekursiv,int d) {
		if (rekursiv) {
			if (zahl1 % d >= 1 || zahl2 % d >= 1) {
				d--;
				ggt(zahl1, zahl2, true,d);
			} else {
				System.out.println(d);
			}
			return d;
		} else {
			while (d >= 0) {
				if (zahl1 % d < 1 && zahl2 % d < 1) {
					System.out.println(d);
					return d;
				}
				d--;
			}
			return d;
		}
	}

	public int getSummeStart(int zahl)
	{
		int d=0;
		return getSumme(zahl,d);
	}
	public int getSumme(int zahl, int d) {

		if (zahl > 0) {
			int i = ((int) (Math.random() * 6) + 5);
			if (d == 0)
				System.out.print(i);
			else
				System.out.print("+" + i);
			d = d + i;
			zahl--;
			getSumme(zahl,d);
		} else
			System.out.println("=" + d);
		return d;

	}

	public int teilbar(int von, int bis, int zahl) {
		if(zahl==0)
		{
			System.out.println(0);
			return 0;
		}
		if (von <= bis) {
			if (von % zahl < 1) {
				System.out.print(von + " ");
			}
			return teilbar(von + 1, bis, zahl);
		}
		return von;
	}


	public int sumIterativ() {
		int x = 0;
		for (int i : array) {
			if (x == 0)
				System.out.print(array[i]);
			else
				System.out.print("+" + array[i]);
			x = x + array[i];
		}
		System.out.println("=" + x);
		return x;
	}


public int sumRekursivStart()
{
	int s=0;
	int d=0;
	return sumRekursiv( s,d);
	
}
	public int sumRekursiv(int s,int d) {

		if (s < array.length - 1) {
			d = d + array[s];
			System.out.print(array[s] + "+");
			s++;
			return sumRekursiv(s,d);
		}
		d = d + array[s];
		System.out.print(array[s]);
		System.out.println("=" + d);
		return d;
	}
	
	public int sumRekursivRuekwertsStart()
	{
		int s=0;
		int d=0;
		return sumRekursivRuekwaerts(s,d);
		
	}

	public int sumRekursivRuekwaerts(int s,int d) {
		if (s < array.length) {
			int s2 = s;
			int spech = array[s];
			d = d + spech;
			s++;
			sumRekursivRuekwaerts(s,d);
			if (s2 == 0) {
				System.out.print(spech);
			} else {
				System.out.print(spech + "+");
				s2--;
			}

		} else {
			System.out.print(d + "=");
		}
		return d;
	}


public int folge1Start(int a,int b)
{
	int d=-1;
	folge1(a,b,d);
	return d;
}
	public int folge1(int a, int b,int d) {
		if (a > b) {
			System.out.print(d + "/" + a + " ");
			d = d * (-3);
			folge1(a - 2, b,d);
		} else if (a == b) {
			System.out.print(d + "/" + a + " ");
		}
		return b;

	}
	
	public int ziffernsummeStart(int zahl)
	{
		int d=0;
		int s=0;
		return ziffernsumme(zahl,d,s);
	}

	public int ziffernsumme(int zahl,int d,int s) {
		String zahl2 = Integer.toString(zahl);
		char[] array = zahl2.toCharArray();
		if (zahl < 0 && d != array.length) {
			zahl *= -1;
			return ziffernsumme(zahl,d,s);
		} else if (d != array.length) {
			if (zahl <= 9)
			{
				System.out.println(zahl+"="+zahl);
				return zahl;
			}
			s = array[d] - 48 + s;
			if(d==array.length-1)
				System.out.print(array[d]);
			else
				System.out.print(array[d] + "+");
			d++;
			return ziffernsumme(zahl,d,s);
		} else {
			System.out.println("=" + s);
			return zahl;
		}

	}

	
public int startBaum(int hoehe)
{
	int i=1;
	int s=1;
	int d=hoehe;
	return baum( hoehe,i,d,s);
}
	public int baum(int hoehe,int i,int d,int s) {
		
		if(hoehe>0)
		{
			if(d>1)
			{
				
				System.out.print(" ");
				d--;
				baum(hoehe,i,d,s);
			}
			else if(i>0)
			{
				System.out.print("*");
				i--;
				baum(hoehe,i,d,s);
			}
			else 
				{
				if(s==1)
					s=s+1;
				else
					s=s+2;
			i=s;
			d=hoehe-1;
			System.out.println("*");
			baum(hoehe-1,i,d,s);
				}
		}
		return hoehe;
	}


public void fallingStart(int startHoehe,int zeit)
{
	int d=0;
	int s=0;
	falling(startHoehe,zeit,d,s);
}
	public void falling(int startHoehe,int zeit,int d,int s)
	{
		s=startHoehe-(int)(0.5*9.80665*(d*d));
		if(d==0)
		{
		System.out.println("Sekunden  ->  Entfernung (Abwurf-Hoehe:"+startHoehe+")");
		System.out.println("--------  ->  ------------------------------");
		}
		if(zeit>=0 && s>=0)
		{
			
			System.out.println("  "+d+"    ->       "+(0.5*9.80665*(d*d)));
			d++;
			falling(startHoehe,zeit-1,d,s);
		}
		else if(zeit<0)
		{
			if(s<0)
				s=startHoehe-(int)(0.5*9.80665*((d-1)*(d-1)));
			System.out.println("Versus-Abbruch; verbleibende Resthoehe : "+s+" Meter");
		}
		else if(startHoehe>10)
		{
			System.out.println("  "+d+"    ->       Handy Kaputt");
		}
		else
		{
			System.out.println("  "+d+"    ->       Aufgekommen aber nicht kaputt");
		}
	}
	}